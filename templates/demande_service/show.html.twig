{% extends 'base.html.twig' %}

{% block title %}Demande de Service{% endblock %}

{% block body %}
    <h1>Demande de Service</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ demande_service.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ demande_service.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ demande_service.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ demande_service.email }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ demande_service.telephone }}</td>
            </tr>
            <tr>
                <th>DateDemande</th>
                <td>{{ demande_service.dateDemande ? demande_service.dateDemande|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_demande_service_index') }}">Retourner a la liste</a>

    <a href="{{ path('app_demande_service_edit', {'id': demande_service.id}) }}">Modifier</a>

    {{ include('demande_service/_delete_form.html.twig') }}
    <br>
    <a href="{{ path('app_pdf_generator', {'id':demande_service.id}) }}" class="btn btn-danger">PDF</a>
{% endblock %}
