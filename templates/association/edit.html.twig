{% extends 'base.html.twig' %}

{% block title %}Modifier association{% endblock %}



{% block body %}
   {% block nompage %}modifier association{% endblock %}
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center mb-4">Formulaire pour modifier une association</h5>
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_row(form.nom, {'attr': {'class': 'form-control'}, 'id': 'nom'}) }}
                           
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.telephone, {'attr': {'class': 'form-control'}, 'id': 'telephone'}) }}
                           
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.email, {'attr': {'class': 'form-control'}, 'id': 'email'}) }}
                           
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.lieu, {'attr': {'class': 'form-control'}, 'id': 'lieu'}) }}
                          
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.codePostal, {'attr': {'class': 'form-control'}, 'id': 'codePostal'}) }}
                            
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.description, {'attr': {'class': 'form-control'}, 'id': 'description'}) }}
                        </div>
                       
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Valider</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
