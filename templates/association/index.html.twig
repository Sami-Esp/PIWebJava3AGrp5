{% extends 'base.html.twig' %}

{% block title %}Association index{% endblock %}

{% block body %}
<style>
    .table {
        border-width: 5px;
        font-size: 10px;
        margin-bottom: 30px;
    }

    .table td,
    .table th {
        padding: 8px;
    }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #f9f9f9;
    }

    .table-striped tbody tr:hover {
        background-color: #ddd;
    }

    .table-responsive {
        display: table;
    }

    .table-responsive > .table-bordered {
        border: none;
    }

    .table-responsive > .table-bordered > thead,
    .table-responsive > .table-bordered > tbody,
    .table-responsive > .table-bordered > tfoot {
        border-top: 1px solid #ddd;
    }

    .text-center {
        vertical-align: middle;
    }

    .btn-danger-custom {
        background-color: #dc3545;
        border-color: #dc3545;
        font-size: 10px;
        padding: 6px 6px;
    }

    .btn-success-custom {
        background-color: #28a745;
        border-color: #28a745;
        font-size: 12px;
        padding: 6px 6px;
    }

    .btn-info-custom {
        background-color: #17a2b8;
        border-color: #17a2b8;
        font-size: 13px;
        padding: 6px 6px;
    }
</style>

<h1>Listes des Associations</h1>

<table class="table table-striped table-bordered table-responsive-sm mx-auto">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Telephone</th>
            <th>Email</th>
            <th>Lieu</th>
            <th>CodePostal</th>
            <th>Description</th>
            <th>Photo</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for association in associations %}
        <tr>
            <td>{{ association.id }}</td>
            <td>{{ association.nom }}</td>
            <td>{{ association.telephone }}</td>
            <td>{{ association.email }}</td>
            <td>{{ association.lieu }}</td>
            <td>{{ association.codePostal }}</td>
            <td>{{ association.description }}</td>
            <td>
                <img src="{{ asset('uploads/' ~ association.photo) }}" alt="Photo de l'association" height="50" width="50" class="img-thumbnail">
            </td>
            <td class="text-center">
                <div class="row">
                    <div class="col">
                        <a href="{{ path('app_association_show', {'id': association.id}) }}" class="btn btn-info-custom btn-sm">Afficher</a>
                    </div>
                    <div class="col">
                        <a href="{{ path('app_association_edit', {'id': association.id}) }}" class="btn btn-success-custom btn-sm">Modifier</a>
                    </div>
                    <div class="col">
                        <a href="{{ path('app_association_delete', {'id': association.id}) }}" class="btn btn-danger-custom btn-sm">Supprimer</a>
                    </div>
                </div>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{{ knp_pagination_render(associations) }}

{% endblock %}
