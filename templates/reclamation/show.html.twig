{% extends 'base.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block body %}
 <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">
    <h1>Reclamation</h1>
 <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reclamation.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ reclamation.contenue }}</td>
            </tr>
            <tr>
                <th>Id_utilisateur</th>
                <td>{{ reclamation.idUtilisateur }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ reclamation.statut }}</td>
            </tr>
            <tr>
                <th>Date_en_jour</th>
                <td>{{ reclamation.dateEnJour ? reclamation.dateEnJour|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reclamation_index') }}" <button type="submit" class="btn btn-primary">retourner a la liste</a>

    <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" <button type="submit" class="btn btn-primary">modifier</a>

    {{ include('reclamation/_delete_form.html.twig') }}
{% endblock %}
