{% extends 'base.html.twig' %}

{% block body %}
    <div  style="display: flex;align-items: center;justify-content:center;margin-top: 75px; padding: 100px;">
    <h1>Inscription</h1>

    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}

    {{ form_row(form.nom, {'label': 'Nom','attr': {'placeholder': 'Ben Arous ...'}}) }}
    {{ form_row(form.prenom, {'label': 'Prenom','attr': {'placeholder': 'Mohamed ...'}}) }}
    {{ form_row(form.mdp, {'label': 'Mot de passe','attr': {'placeholder': 'Mot de passe'}}) }}
    {{ form_row(form.confirmer_mdp, {'label': 'Confirmation mot de passe','attr': {'placeholder': 'Répétez mot de passe'}}) }}
    {{ form_row(form.email, {'label': 'Adresse email','attr': {'placeholder': 'prenom.nom@gmail.com ...'}}) }}
    {{ form_row(form.adresse, {'label': 'Adresse','attr': {'placeholder': '1 rue de Tunis ...'}}) }}
    {{ form_row(form.telephone, {'label': 'Téléphone','attr': {'placeholder': 'Numéro de téléphone'}}) }}


    <button type="submit" class="btn btn-success">Confirmer</button>
    <a href="{{ path('app_baseuer') }}" class="btn btn-primary">Retour</a>
    {{ form_end(form) }}
    
    </div>
{% endblock %}