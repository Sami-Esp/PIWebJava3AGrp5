{% extends 'base.html.twig' %}

{% block title %}Reponse index{% endblock %}

{% block body %}

<div style="display: flex;align-items: center;justify-content:center;margin-top: -250px; padding: 300px;">

  <h1>Listes des Reponses</h1>

  <table class="table">
    <br><br><br>
    <thead>
      <tr>
        <th>Id</th>
        <th>Contenu</th>
        <th>Date</th>
        <th>Id_reclamation</th>

        <th>actions</th>
      </tr>
    </thead>
    <tbody>
      {% for reponse in reponses %}
      <tr>
        <td>{{ reponse.id }}</td>
        <td>{{ reponse.contenu }}</td>
        <td>{{ reponse.date ? reponse.date|date('Y-m-d') : '' }}</td>
        <td>{{ reponse.IdReclamation }}</td>
        <td>
          <a href="{{ path('app_reponse_show', {'id': reponse.id}) }}"<button type="submit" class="btn btn-primary">afficher</a>
          <a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}"<button type="submit" class="btn btn-primary">modifier</a>
        </td>
      </tr>
      {% else %}
      <tr>
        <td colspan="4">no records found</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

  <div class="d-flex justify-content-center">
    <ul class="pagination">
      {% if page > 1 %}
      <li class="page-item">
        <a class="page-link" href="{{ path('app_reponse_index', {'page': page - 1}) }}">Previous</a>
      </li>
      {% endif %}

      {% for i in 1..total_pages %}
      <li class="page-item {% if page == i %}active{% endif %}">
        <a class="page-link" href="{{ path('app_reponse_index', {'page': i}) }}">{{ i }}</a>
      </li>
      {% endfor %}

      {% if page < total_pages %}
      <li class="page-item">
        <a class="page-link" href="{{ path('app_reponse_index', {'page': page + 1}) }}">Next</a>
      </li>
      {% endif %}
    </ul>
  </div>

  <a href="{{ path('app_reponse_new') }}"<button type="submit" class="btn btn-primary">Cr√©er une reponse</a>
{% endblock %}
