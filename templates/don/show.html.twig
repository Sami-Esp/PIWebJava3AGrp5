{% extends 'base.html.twig' %}

{% block title %}Don{% endblock %}

{% block body %}
    <div class="container">
        <h1>Don</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ don.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ don.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ don.prenom }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ don.email }}</td>
                </tr>
                <tr>
                    <th>Telephone</th>
                    <td>{{ don.telephone }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ don.type }}</td>
                </tr>
                {% if don.type == 'Argent' %}
                    <tr>
                        <th>Montant</th>
                        <td>{{ don.montant }}</td>
                    </tr>
                    <tr>
                        <th>ModeDePaiement</th>
                        <td>{{ don.modeDePaiement }}</td>
                    </tr>
                {% elseif don.type == 'objet' %}
                    <tr>
                        <th>Categorie</th>
                        <td>{{ don.categorie }}</td>
                    </tr>
                    <tr>
                        <th>Etat</th>
                        <td>{{ don.etat }}</td>
                    </tr>
                    <tr>
                        <th>Commentaire</th>
                        <td>{{ don.commentaire }}</td>
                    </tr>
                    <tr>
                        <th>Label</th>
                        <td>{{ don.label }}</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>

        <a href="{{ path('app_don_index') }}"class="btn btn-primary">Retourner a  list</a>

        <br>

        {{ include('don/_delete_form.html.twig') }}
    </div>
{% endblock %}
